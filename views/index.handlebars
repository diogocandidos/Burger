
    <div class="container-fluid">

    <img class="burgerimg" src="">


    <h1>Eat-Da-Burger!</h1>

   
        <div class="row">
                <div class= "col-6">
                <h2>To be eaten!</h2>
                
                {{#each burgers}}
                    {{#unless devoured}}
                    {{> burger-block devour=false}} 
                    {{/unless}}
                {{/each}}
                
            </div>
            <div class= "col-6">
                <h2>Burger Eaten!</h2>
                
                {{#each burgers}}
                    {{#if devoured}}
                    {{> burger-block devour=true}}
                    {{/if}}
                {{/each}}
                
            </div>
        </div>
   <br></br>

        <form class="create-form, text-center">
            <div class="form-group">
                <label for="burger">Burger Name:</label>
                <input type="text" id="burger" name="name"> 
                <button class = "btn btn-primary" type="submit">Add Burger</button>
            </div>
        </form> 
 </div>
